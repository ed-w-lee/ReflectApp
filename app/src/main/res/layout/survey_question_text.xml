<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/question_text"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="What is a question blah blah blah blah blah balh?" />

    <TextView
        android:id="@+id/description_text"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/tertiary_text_light"
        tools:text="This is a description. saroceusaoerc aro  aosceuh aesuc a aecuas ocuaoe ucaousaorechua u aoserc uaose u" />

    <com.google.android.material.textfield.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/response_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:hint="this is a test hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/response_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="this is test input text" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
